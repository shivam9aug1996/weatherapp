                <label for="fname">Enter City:</label>
                <input type="text" class="form-control" id="cityName" name="fname" value="">
              
              </div>
              
              <input type="submit" value="Search" id="submitBtn">
            </form>
      </div>
</div>
 
    
    

    
  
 
   
          
      
   
     

    
 
        
     

